[module/kitsu]
type = custom/script

exec = curl -H "Authorization: Bearer $KITSU_TOKEN" -H "Accept: application/vnd.api+json" -H "Content-Type: application/vnd.api+json"  -s 'https://kitsu.io/api/edge/feeds/notifications/16' | jq -r ".meta.unseenCount"
label = Ó§á %output%


click-left = xdg-open "https://kitsu.io/notifications"

interval = 10


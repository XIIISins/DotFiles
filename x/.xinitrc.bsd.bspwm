#!/bin/bash
set -x
# Screens
screens=$(xrandr | awk '/ connected/' | wc -l)
if [ $screens -eq 2 ] || [ $screens -lt 2]; then
  $HOME/.screenlayout/default.sh
fi


# Some X Settings
xrdb -merge $HOME/.Xresources
xsetroot -cursor_name left_ptr &
xset +fp $HOME/.local/share/fonts/fonts
xset fp rehash

# KBD/Mouse sharing
synergys -c $HOME/.config/synergy.conf

# Shiny
compton -b

# Not so tiring at night
redshift -l 52:5 -t 6400:3200 & 

# Start bspwm
polybar top &
sxhkd &
exec bspwm


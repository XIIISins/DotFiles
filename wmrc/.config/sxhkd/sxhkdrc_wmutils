## wm-independent hotkeys

# reload sxhkd
super + Escape
	pkill -USR1 -x sxhkd

# launch dmenu
super + space
  ~/.scripts/run_dmenu

# launch a term
super + Return
  urxvt

# screenshot
Print
  ~/.scripts/screenie

# launch a browser
super + shift + f
  firefox

# lock screen
super + shift + x
  lock.sh

# media keys things
XF86AudioRaiseVolume
  amixer sset Master 5%+ unmute

XF86AudioLowerVolume
  amixer sset Master 5%- unmute

XF86AudioMute
  amixer sset Master toggle

XF86MonBrightnessUp
  xbacklight -inc 10%

XF86MonBrightnessDown
  xbacklight -dec 10%

XF86AudioPlay
  mpc toggle

XF86AudioStop
  mpc stop

XF86AudioNext
  mpc next

XF86AudioPrev
  mpc prev


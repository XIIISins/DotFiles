#! /usr/bin/python
import os
from datetime import datetime, time

now = datetime.now()
custom = os.environ.get('CUSTOM', 0)


if time(8,00) <= now.time() <= time(16,00):
    os.system('feh --bg-fill ~/wallpapers/wallhaven-16149.png ~/wallpapers/wallhaven-16149.png ~/wallpapers/wallhaven-16149.png')
elif custom:
    os.system('hsetroot -fill %s' % custom)
else:
    os.system('hsetroot -fill ~/wallpapers/wallhaven-16149.png')

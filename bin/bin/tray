#!/bin/bash

TRAY=`which stalonetray`
NM_APP=`which nm-applet`
Trays=`pgrep -c stalonetray`

if [ $Trays != 0 ]; then
  echo "$Trays Tray(s) already running, kill $(pgrep stalonetray) first."
  exit 1
fi

if [ -z $TRAY ]; then
  echo "Cannot find $TRAY"
  exit 2
fi

if [ -z $NM_APP ]; then
  echo "Cannot find $NM_APP"
  exit 3
fi

$TRAY &
$NM_APP &


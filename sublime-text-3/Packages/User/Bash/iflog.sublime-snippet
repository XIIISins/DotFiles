<snippet>
	<content><![CDATA[if [ -e $LOG_FILE ]; then
	echo -e "$@"
	echo -e "$@" >> $LOG_FILE
else 
	echo -e "File in $LOG_FILE doesn't exist, creating.."
	touch $LOG_FILE
	echo -e "$@"
	echo -e "$@" >> $LOG_FILE
fi
]]></content>
